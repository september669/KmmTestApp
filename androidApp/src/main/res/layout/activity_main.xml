<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

  <FrameLayout
      android:id="@+id/activityMainFragmentLayout"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/activityMainNavigation"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"

      />

  <!--
  app:labelVisibilityMode="labeled" - show all menu items labels
  -->
  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/activityMainNavigation"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:itemHorizontalTranslationEnabled="false"
      app:itemTextAppearanceActive="@style/RobotoRegular.GreyishBrown.12"
      app:itemTextAppearanceInactive="@style/RobotoRegular.WarmGrey.12"
      app:labelVisibilityMode="labeled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/main_menu"
      tools:itemIconTint=""


      />

</androidx.constraintlayout.widget.ConstraintLayout>
